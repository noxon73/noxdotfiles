# alias that only work with root // sudo
#
if [ -f /etc/debian_version ]; then
    alias 4update='apt-get update && apt-get upgrade'
    alias 4search='apt-cache search '
    alias 4install='apt-get install '
    alias 4show='apt-cache show'
    alias 4remove='apt-get remove '
    alias 4autoremove='apt-get autoremove '
fi
